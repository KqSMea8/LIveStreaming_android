<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/rl_days"
    android:background="@drawable/layer_shouhu_type_normal"
    >
    <ImageView
        android:id="@+id/iv_corner"
        android:layout_width="wrap_content"
        android:src="@drawable/corner_normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="天数：30天"
        android:id="@+id/tv_days"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_plugin_price"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/bg_plugin_price_item"
        android:gravity="center_vertical"
        android:paddingLeft="38dp"
        android:layout_margin="5dp"
        android:layout_below="@id/tv_days"
        android:layout_centerHorizontal="true"
        android:text="000"
        android:textColor="@color/text_title"
        android:textSize="11sp"
        android:visibility="visible"/>
</RelativeLayout>