<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:background="@color/white"
                                                     android:orientation="vertical"
                                                     android:clipToPadding="false"
                                                     android:padding="@dimen/base_p_m_15">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_display_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="15%w"
            android:background="#E7E7E7">

            <TextView
                android:id="@+id/tv_display_num_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="2%w"
            app:layout_widthPercent="15%w"
            android:background="#E7E7E7">

            <TextView
                android:id="@+id/tv_display_num_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="2%w"
            app:layout_widthPercent="15%w"
            android:background="#E7E7E7">

            <TextView
                android:id="@+id/tv_display_num_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            android:background="#E7E7E7"
            app:layout_marginLeftPercent="2%w"
            app:layout_widthPercent="15%w">

            <TextView
                android:id="@+id/tv_display_num_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="2%w"
            android:background="#E7E7E7"
            app:layout_widthPercent="15%w">

            <TextView
                android:id="@+id/tv_display_num_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="2%w"
            android:background="#E7E7E7"
            app:layout_widthPercent="15%w">

            <TextView
                android:id="@+id/tv_display_num_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"/>
        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_button_num_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_num_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_num_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_marginTopPercent="5%w">

        <TextView
            android:id="@+id/tv_button_num_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_num_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_num_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_marginTopPercent="5%w">

        <TextView
            android:id="@+id/tv_button_num_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_num_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_num_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_marginTopPercent="5%w">

        <TextView
            android:id="@+id/tv_button_reset"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_num_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>

        <TextView
            android:id="@+id/tv_button_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:stateListAnimator="@drawable/bm_selector_press_scale_out"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_heightPercent="15%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="30%w"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>