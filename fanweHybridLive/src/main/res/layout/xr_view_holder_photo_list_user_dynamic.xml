<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_thumb_xr_view_holder_photo_list_user_dynamic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_heightPercent="100%w" />
    <ImageView
        android:id="@+id/ic_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_white_close"
        android:layout_gravity="right"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_heightPercent="15%w"
        app:layout_widthPercent="15%w"/>
</com.zhy.android.percent.support.PercentFrameLayout>