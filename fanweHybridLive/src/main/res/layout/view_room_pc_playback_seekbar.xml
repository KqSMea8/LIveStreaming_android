<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/blur"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_pc_pause" />

    <TextView
        android:id="@+id/tv_playback_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/white" />

    <SeekBar
        android:id="@+id/sb_playback"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:progressDrawable="@drawable/bg_seekbar_play_video"
        android:thumb="@drawable/ic_seekbar_thumb_play_video"
        android:thumbOffset="0dp" />

    <TextView
        android:id="@+id/tv_playback_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/iv_playback_fullscreen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_pc_fullscreen" />
</LinearLayout>
