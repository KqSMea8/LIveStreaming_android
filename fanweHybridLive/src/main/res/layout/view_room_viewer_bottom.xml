<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="bottom">

    <!-- 发消息 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_send_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- 插件中心 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_viewer_plugin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent">
        <cn.zeffectn.view.recordbutton.view.RecordButton
            android:id="@+id/speech"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shuoh_icon" />
    </LinearLayout>

    <!-- 竞拍订单支付 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_viewer_auction_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- 显示隐藏底部扩展 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_bottom_extend_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- 申请上庄 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_apply_banker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <!-- 私聊消息 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_private_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- 连麦 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_apply_link_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- 礼物 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_send_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- 分享 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>