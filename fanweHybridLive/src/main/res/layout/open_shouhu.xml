<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sv_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_activity"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_title_bar"
            android:background="@color/transparent">
            <ImageView
                android:layout_width="@dimen/height_title_bar"
                android:id="@+id/iv_back"
                android:src="@drawable/icon_shouhu_back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/height_title_bar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贵族守护"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/iv_banner"
            android:src="@drawable/shouhu_banner"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
             />
        <TextView
            android:layout_width="wrap_content"
            android:text="守护特权"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/shouhu_01"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/shouhu_02"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/shouhu_03"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="守护特权"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/shouhu_04"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/shouhu_05"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"></View>
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:src="@drawable/button_open_shouhu"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:id="@+id/iv_open_shouhu"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->
        <Button
            android:layout_width="match_parent"
            android:button="@null"
            android:gravity="center"
            android:id="@+id/btn_buy"
            android:checked="true"
            android:background="@color/main_color"
            android:text="开通守护"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="50dp" />
    </LinearLayout>

</ScrollView>