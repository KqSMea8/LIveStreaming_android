<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/xr_selector_transparent_gray"
             android:clickable="true"
             android:focusable="true" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/margin_s"
                  android:paddingRight="@dimen/margin_s">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_xr_view_holder_report_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xxs"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/tv_name_xr_view_holder_report_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_m"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_subhead"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_divider_line_s"
            android:background="@color/grey_translucent_light"/>
    </LinearLayout>
</FrameLayout>
