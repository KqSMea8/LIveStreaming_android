<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/item_live_recharge_rule_min_height"
              android:orientation="vertical"
              android:paddingBottom="@dimen/base_p_m_10"
              android:paddingLeft="@dimen/base_p_m_5"
              android:paddingRight="@dimen/base_p_m_5"
              android:paddingTop="@dimen/base_p_m_10">

    <LinearLayout
        android:id="@+id/ll_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_pay_dialog"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/base_p_m_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_diamonds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#555555"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/base_p_m_5"
                android:src="@drawable/ic_diamond"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_p_m_5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价:"
                android:textColor="#47DB69"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_p_m_5"
                android:text="0"
                android:textColor="#47DB69"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gift_coins_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="赠送100游戏币"
            android:textColor="@color/text_content"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>