<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pc_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_control_view_port_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pc_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_pc_return"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_control_view_port_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blur"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.fanwe.live.appview.room.RoomPCPlaybackSeekbarView
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>