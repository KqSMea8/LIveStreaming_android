<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    >

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:textColor="@color/shou_color" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content" >

                <com.fanwe.library.view.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/civ_head_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_default_head"
                    app:civ_border_color="@null"
                    app:civ_border_width="0dp" />

                <ImageView
                    android:id="@+id/civ_v_icon"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/icon_w" />
                <TextView
                    android:textSize="8sp"
                    android:id="@+id/tv_shouhu_days"
                    android:layout_width="60dp"
                    android:background="@drawable/layer_blur_live_ticket"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="已守护:70天"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微笑百事通"
                    android:textColor="@color/shou_color"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="300票"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_shouhu_level"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
             />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在座"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/shou_state_online"
            android:textSize="13sp" />
</LinearLayout>