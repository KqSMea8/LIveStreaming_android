<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_activity"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <com.fanwe.library.customview.ClearEditText
            android:id="@+id/et_card_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_activity_topic_white_corner"
            android:maxLines="1"
            android:maxLength="19"
            android:inputType="number"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:hint="请输入银行卡号"
            android:textColorHint="@color/text_content"
            android:textSize="16sp" />

        <com.fanwe.library.customview.ClearEditText
            android:id="@+id/et_card_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_activity_topic_white_corner"
            android:maxLines="1"
            android:maxLength="20"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_below="@+id/et_card_account"
            android:textColorHint="@color/text_content"
            android:hint="请输入持卡人名称"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_edittext_activity_topic_white_corner"
            android:layout_below="@+id/et_card_nickname"
            android:layout_marginTop="20dp"
            android:id="@+id/ll_bankname"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="开户银行"
                android:id="@+id/tv_change"
                android:paddingLeft="6dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <com.fanwe.library.customview.ClearEditText
                android:id="@+id/et_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_activity_topic_white_corner"
                android:maxLines="1"
                android:maxLength="20"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_below="@+id/et_alipay_account"
                android:textColorHint="@color/text_content"
                android:textSize="16sp"
                />
        </LinearLayout>
        <com.fanwe.library.customview.ClearEditText
            android:id="@+id/et_card_branchname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_activity_topic_white_corner"
            android:maxLines="1"
            android:maxLength="20"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_below="@+id/ll_bankname"
            android:textColorHint="@color/text_content"
            android:hint="请输入支行名称"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_do_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_main_color_to_main_color_press_50dp_corner"
        android:gravity="center"
        android:padding="8dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>