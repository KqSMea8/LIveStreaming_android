<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_white_rectangle_radius_30"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PK设置"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/rg_time"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ra_time5"
            android:checked="true"
            android:button="@drawable/selector_radio_time_chose"
            android:textColor="@drawable/selector_text_time_chose"
            android:text="5分钟" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_time_chose"
            android:textColor="@drawable/selector_text_time_chose"
            android:id="@+id/ra_time10"
            android:text="10分钟" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_time_chose"
            android:textColor="@drawable/selector_text_time_chose"
            android:id="@+id/ra_time30"
            android:text="30分钟" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_radio_time_chose"
            android:textColor="@drawable/selector_text_time_chose"
            android:layout_weight="1"
            android:id="@+id/ra_time60"
            android:text="60分钟" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="自定义时间："
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_content_deep"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/et_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/layer_white_stroke_corner"
            android:gravity="center"
            android:inputType="number"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:maxLength="3"
            android:textColor="@color/text_title"
            android:textColorHint="@color/text_content"
            android:textSize="13sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="&#060;&#061;120分钟"
            android:paddingLeft="10dp"
            android:textColor="@color/text_content_deep"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PK主题："
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_content_deep"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/et_theme"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/layer_white_stroke_corner"
            android:gravity="center"
            android:layout_weight="1.5"
            android:paddingLeft="5dp"
            android:maxLength="10"
            android:textColor="@color/text_title"
            android:textColorHint="@color/text_content"
            android:textSize="13sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:id="@+id/btn_ok"
        android:textColor="@color/white"
        android:background="@drawable/layer_main_btn_pk_time_chose"
        android:text="确认" />
</LinearLayout>