<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
        <TextView
            android:layout_width="wrap_content"
            android:text="宣炳虎"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:id="@+id/tv_name"
            android:textColor="@color/auction_main_color"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="开通时长:"
        android:textColor="@color/auction_main_color"
        android:textSize="14sp" />
    <GridView
        android:layout_width="match_parent"
        android:id="@+id/lv_days"
        android:scrollbars="none"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:numColumns="3"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke_deep"></View>
    <TextView
        android:layout_width="wrap_content"
        android:text="有效时间："
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_endtime"
        android:textColor="@color/auction_main_color"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="120.6dp"
            android:layout_height="31.5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_plugin_price"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="0"
            android:textColor="@color/text_title"
            android:textSize="12sp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"></View>
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/layer_main_btn_pk_time_chose"
            android:text="开通"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>