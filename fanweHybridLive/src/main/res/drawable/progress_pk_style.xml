<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp"></corners>
            <gradient
                android:angle="0"
                android:centerX="0.5"
                android:endColor="@color/pk_progress_bg_end"
                android:startColor="@color/pk_progress_bg_start"/>
        </shape>
    </item>
    <!-- 第一进度条样式，我想修改的，修改成简单的灰色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- 圆角设置 -->
                <corners android:radius="10dp"/>
                <gradient
                    android:angle="0"
                    android:centerX="0.5"
                    android:endColor="@color/pk_progress_pro_end"
                    android:startColor="@color/pk_progress_pro_start"/>
            </shape>
        </clip>
    </item>
</layer-list>