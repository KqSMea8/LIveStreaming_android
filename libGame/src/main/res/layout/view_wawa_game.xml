<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        >

        <com.fanwe.libgame.wawa.view.AutoPollRecyclerView
            android:id="@+id/rv_recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="110dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/prizeclaw_bg">

            <ImageView
                android:id="@+id/select_coin_bg_bottom"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="40dp"
                android:background="@drawable/prizeclaw_docker_1" />

            <ImageView
                android:id="@+id/select_coin_bg"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="65dp"
                android:background="@drawable/prizeclaw_docker_2" />

            <com.fanwe.libgame.wawa.view.AutoPollRecyclerView
                android:id="@+id/rv_recycleView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_coin"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/youxibi__cebianlan" />

                <TextView
                    android:id="@+id/txt_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="0" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_chongzhi"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chonhzhi" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btn_0"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/radio_coin_btn_bg_selector"
                        android:button="@null"
                        android:checked="true"
                        android:padding="5dp"
                        android:text="100"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn_1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_coin_btn_bg_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="1k"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn_2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_coin_btn_bg_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="1w"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn_3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_coin_btn_bg_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="10w"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </RadioGroup>

                <ImageView
                    android:id="@+id/start_grab_animation"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/prizeclaw_start" />

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
