<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@drawable/bg_dice_score_middle"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginBottomPercent="12%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"
        android:clipChildren="false"
        app:layout_marginTopPercent="15%">

        <RelativeLayout
            android:id="@+id/rl_container_bets_view_dice_score_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_bets_view_dice_score_board"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_dice_bets"
            app:layout_heightPercent="50%"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            app:layout_widthPercent="50%"/>

        <TextView
            android:id="@+id/tv_bet_total_view_dice_score_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_dice_bet_total"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="invisible"
            app:layout_marginLeftPercent="15%"
            app:layout_marginRightPercent="15%"/>

        <TextView
            android:id="@+id/tv_bet_self_view_dice_score_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_ratio_view_dice_score_board"
            android:layout_weight="1"
            android:background="@drawable/layer_dice_bet_self"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="9sp"
            app:layout_marginLeftPercent="15%"
            app:layout_marginRightPercent="15%"/>

        <TextView
            android:id="@+id/tv_ratio_view_dice_score_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_marginLeftPercent="45%"
            android:textColor="#7C2505"
            android:textSize="12sp" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/mask_view_dice_score_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dice_mask_board_middle" />

</com.zhy.android.percent.support.PercentFrameLayout>